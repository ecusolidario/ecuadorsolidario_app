<div class="container well">
<div class="col-md-6">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Acceder</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit t('.sign_in'), :class => 'btn btn-primary btn-block' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Recuérdame
          </label>
        </div>
      <% end -%>
  <% end %>
  <%- if devise_mapping.recoverable? %>
    <%= link_to '¿Olvidaste tu contraseña?', new_password_path(resource_name), class: 'right' %><br>
  <% end -%>

</div>
<div class="col-md-6">
<div class="authform">
<%- if devise_mapping.registerable? %>
<strong>¿No tienes cuenta?</strong> Regístrate para poder publicar en la plataforma.
</br></br>
<%= link_to 'Regístrate', new_registration_path(resource_name), class: 'btn btn-success btn-block'  %>
<% end -%>
</div>
</div></div>
